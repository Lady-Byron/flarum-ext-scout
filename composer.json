{
    "name": "lady-byron/scout",
    "description": "Elasticsearch search for Flarum",
    "keywords": ["flarum"],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "laravel/scout": "^9.4",
        "matchish/laravel-scout-elasticsearch": "^7.12",
        "fof/user-bio": "*"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\Scout\\": "src/"
        },
        "files": ["src/helpers.php"]
    },
    "extra": {
        "flarum-extension": {
            "title": "Elasticsearch",
            "category": "feature",
            "icon": {
                "name": "fas fa-search",
                "backgroundColor": "#f47f68",
                "color": "#fff"
            }
        }
    }
}
